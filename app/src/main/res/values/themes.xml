<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ResumeBuilder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

      <!--Heading for Each fragment -->
    <style name="headingStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:textSize">@dimen/dimen_24</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="cornerRadius">@dimen/dimen_8</item>
        <item name="android:textAppearance">Bold</item>
        <item name="android:background" >@color/primaryColor</item>
    </style>

    <style name="EditTextBox" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/dimen_24</item>
        <item name="cornerRadius">@dimen/dimen_4</item>
        <item name="android:ems">10</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="android:textAppearance">Bold</item>
    </style>

</resources>